<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp"
android:paddingBottom="16dp"
tools:context=".GameLogic">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Game Room" />

    <TextView
        android:id="@+id/txtPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/txtTitle"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="TextView"/>


    <ImageView
        android:id="@+id/imgPlayer1_image"
        android:layout_marginTop="16dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/question"
        android:layout_below="@+id/txtPlayer1"/>

    <TextView
        android:id="@+id/txtPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/txtTitle"
        android:layout_alignEnd="@id/txtTitle"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="TextView"/>

    <ImageView
        android:id="@+id/imgPlayer2_image"
        android:layout_marginTop="16dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/question"
        android:layout_below="@+id/txtPlayer2"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txtNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="TextView"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imgPlayer2_image"/>

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txtNotification"
        android:text="Start A new Game" />

</RelativeLayout>